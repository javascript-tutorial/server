:root {
  --white: #fff

  --grey-120: #313130
  --grey-46: #716f6e
  --grey-30: #908e8d
  --grey-16: #c6c4c2
  --grey-10: #f7f4f3
  --grey-11: #e9e6e4
  --grey-13: #d9d6d5

  --redBrand-46: #c4433a
  --redBrand-30: #df6c5d
  --redBrand-12: #fcd5ce

  --blueAction-30: #748dcd
  --blueAction-46: #436ebd

  --green-46: #407b5a
  --green-30: #4f9e72
  --green-16: #91c2a3
