  --yellow-11: #fee3d4

  --blue-46: #0d75a1
  --blue-30: #4b94be
  --blue-12: #d0e0ed
  --blue-10: #ecf2f8

  --foregroundInverted: var(--grey-10)
  --foregroundDefault: var(--grey-120)
  --foregroundAlt: var(--grey-46)
  --foregroundSubtle: var(--grey-30)
  --foregroundAccent: var(--redBrand-46)
  --foregroundAccentHover: var(--redBrand-30)
